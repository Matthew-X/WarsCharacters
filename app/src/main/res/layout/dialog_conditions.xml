<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/icon_backgroud"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <TextView
                    android:id="@+id/hidden_select"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/condition_hidden"
                    android:fontFamily="@font/agency_fb"
                    android:gravity="center"
                    android:onClick="onHidden"
                    android:shadowColor="@color/white"
                    android:shadowRadius="8"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/focused_select"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/condition_focused"
                    android:fontFamily="@font/agency_fb"
                    android:gravity="center"
                    android:onClick="onFocused"
                    android:shadowColor="@color/white"
                    android:shadowRadius="8"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <TextView
                    android:id="@+id/weakened_select"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/condition_weakened"
                    android:fontFamily="@font/agency_fb"
                    android:gravity="center"
                    android:onClick="onWeakened"
                    android:shadowColor="@color/white"
                    android:shadowRadius="8"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bleeding_select"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/condition_bleeding"
                    android:fontFamily="@font/agency_fb"
                    android:gravity="center"
                    android:onClick="onBleeding"
                    android:shadowColor="@color/white"
                    android:shadowRadius="8"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stunned_select"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/condition_stunned"
                    android:fontFamily="@font/agency_fb"
                    android:gravity="center"
                    android:onClick="onStunned"
                    android:shadowColor="@color/white"
                    android:shadowRadius="8"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/agency_fb"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:text="CONDITIONS"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>