                        android:textColor="@color/black"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bleeding_select"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/condition_bleeding"
                        android:fontFamily="@font/agency_fb"
                        android:gravity="center"
                        android:onClick="onBleeding"
                        android:shadowColor="@color/white"
                        android:shadowRadius="8"
                        android:textColor="@color/black"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stunned_select"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/condition_stunned"
