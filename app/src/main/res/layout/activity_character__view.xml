    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shadow"
        android:onClick="onHide"
        android:visibility="invisible"
