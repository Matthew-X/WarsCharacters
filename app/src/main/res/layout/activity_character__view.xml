<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Character_view">

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/character_select_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="@drawable/border"
        android:src="@drawable/character_select_background"
        app:layout_constraintBottom_toBottomOf="@+id/character_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/character_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/bottom_panel"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/health_endurance_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/health_endurance" />

            <TextView
                android:id="@+id/health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/agency_fb"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/health_endurance_image"
                app:layout_constraintEnd_toEndOf="@+id/health_endurance_image"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toStartOf="@+id/health_endurance_image"
                app:layout_constraintTop_toTopOf="@+id/health_endurance_image"
                app:layout_constraintVertical_bias="0.56" />

            <TextView
                android:id="@+id/endurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/agency_fb"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/health_endurance_image"
                app:layout_constraintEnd_toEndOf="@+id/health_endurance_image"
                app:layout_constraintHorizontal_bias="0.74"
                app:layout_constraintStart_toStartOf="@+id/health_endurance_image"
                app:layout_constraintTop_toTopOf="@+id/health_endurance_image"
                app:layout_constraintVertical_bias="0.56" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/name_panel_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/character_name" />

            <ImageView
                android:id="@+id/insight_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="@+id/name_panel_image"
                app:layout_constraintStart_toStartOf="@+id/name_panel_image"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:srcCompat="@drawable/insight" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/insight_icon"
                app:layout_constraintStart_toStartOf="@+id/insight_icon"
                app:layout_constraintTop_toBottomOf="@+id/insight_icon">

                <ImageView
                    android:id="@+id/insight1"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dice" />

                <ImageView
                    android:id="@+id/insight2"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dice" />

                <ImageView
                    android:id="@+id/insight3"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dice" />
            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agency_fb"
                android:text="Diala Passil"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/name_panel_image"
                app:layout_constraintStart_toStartOf="@+id/name_panel_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.26" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/strength_icon"
                app:layout_constraintStart_toStartOf="@+id/strength_icon"
                app:layout_constraintTop_toBottomOf="@+id/strength_icon">

                <ImageView
                    android:id="@+id/strength1"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@drawable/dice" />

                <ImageView
                    android:id="@+id/strength2"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dice" />

                <ImageView
                    android:id="@+id/strength3"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dice" />
            </LinearLayout>

            <ImageView
                android:id="@+id/tech_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="@+id/insight_icon"
                app:layout_constraintEnd_toEndOf="@+id/name_panel_image"
                app:layout_constraintStart_toEndOf="@+id/insight_icon"
                app:layout_constraintTop_toTopOf="@+id/insight_icon"
                app:srcCompat="@drawable/tech" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/tech_icon"
                app:layout_constraintStart_toStartOf="@+id/tech_icon"
                app:layout_constraintTop_toBottomOf="@+id/tech_icon">

                <ImageView
                    android:id="@+id/tech1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dice" />

                <ImageView
                    android:id="@+id/tech2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dice" />

                <ImageView
                    android:id="@+id/tech3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dice" />
            </LinearLayout>

            <ImageView
                android:id="@+id/strength_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="@+id/insight_icon"
                app:layout_constraintEnd_toStartOf="@+id/insight_icon"
                app:layout_constraintStart_toStartOf="@+id/name_panel_image"
                app:layout_constraintTop_toTopOf="@+id/insight_icon"
                app:srcCompat="@drawable/strength" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/speed_defence_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/speed_defence" />

            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/agency_fb"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/speed_defence_image"
                app:layout_constraintEnd_toEndOf="@+id/speed_defence_image"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toStartOf="@+id/speed_defence_image"
                app:layout_constraintTop_toTopOf="@+id/speed_defence_image"
                app:layout_constraintVertical_bias="0.57" />

            <ImageView
                android:id="@+id/defence"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_weight="1"
                android:background="@drawable/dice"
                app:layout_constraintBottom_toBottomOf="@+id/speed_defence_image"
                app:layout_constraintEnd_toEndOf="@+id/speed_defence_image"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="@+id/speed_defence_image"
                app:layout_constraintTop_toTopOf="@+id/speed_defence_image"
                app:layout_constraintVertical_bias="0.57" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>