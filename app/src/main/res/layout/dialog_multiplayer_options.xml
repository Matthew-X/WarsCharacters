<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="270dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imageView51"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/character_select_background" />

    <ImageView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/menu_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_level"
        app:layout_constraintVertical_bias="0.85"
        app:srcCompat="@drawable/separator" />

    <LinearLayout
        android:id="@+id/menu_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_portrait">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mp_rewards_button"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/reward_button" />

            <ImageView
                android:id="@+id/mp_accessory_button"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/item_accessory" />

            <ImageView
                android:id="@+id/mp_armour_button"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/item_armour" />

            <ImageView
                android:id="@+id/mp_ranged_button"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/item_ranged" />

            <ImageView
                android:id="@+id/mp_melee_button"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/item_melee" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mp_xp_button"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/xpbutton" />

            <ImageView
                android:id="@+id/mp_bio_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_bio" />

            <ImageView
                android:id="@+id/mp_background"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/icon_back" />

            <ImageView
                android:id="@+id/mp_condition_button"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/imperial_condition" />

            <ImageView
                android:id="@+id/mp_remove_button"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/icon_remove" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView53"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/border_landscape" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/agency_fb"
        android:gravity="center"
        android:shadowColor="@color/shadow"
        android:shadowRadius="10"
        android:text="PLAYER"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/player_portrait"
        app:layout_constraintTop_toTopOf="@+id/player_portrait" />

    <TextView
        android:id="@+id/read_only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:fontFamily="@font/agency_fb"
        android:gravity="center"
        android:shadowColor="@color/shadow"
        android:shadowRadius="10"
        android:text="READ ONLY"
        android:textColor="#5BFBF9F9"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/faction_icon"
        app:layout_constraintStart_toStartOf="@+id/faction_icon"
        app:layout_constraintTop_toBottomOf="@+id/faction_icon" />

    <TextView
        android:id="@+id/player_level"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/agency_fb"
        android:gravity="center"
        android:shadowColor="@color/shadow"
        android:shadowRadius="10"
        android:text="Level 1"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/player_portrait"
        app:layout_constraintStart_toStartOf="@+id/player_name"
        app:layout_constraintTop_toBottomOf="@+id/player_name" />

    <ImageView
        android:id="@+id/player_portrait"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/portrait_biv" />

    <ImageView
        android:id="@+id/faction_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player_portrait"
        app:srcCompat="@drawable/imperial_icon_lit" />

</androidx.constraintlayout.widget.ConstraintLayout>