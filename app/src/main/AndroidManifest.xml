<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.imperialassault">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Character Tracker"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImperialAssault">
        <activity android:name=".RewardsScreen" />
        <activity android:name=".LoadScreen" />
        <activity
            android:name=".ItemSelectScreen"
            android:label="@string/title_activity_item__select__screen"
            android:theme="@style/Theme.ImperialAssault.NoActionBar" />
        <activity android:name=".RangedScreen" />
        <activity android:name=".MeleeScreen" />
        <activity android:name=".AccScreen" />
        <activity android:name=".ArmorScreen" />
        <activity android:name=".CharacterScreen" />
        <activity android:name=".Characters_list" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>