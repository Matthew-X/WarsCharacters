<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glasswellapps.iact">

    <application
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Character Tracker"
        android:largeHeap="true"
        android:screenOrientation="sensorPortrait"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImperialAssault">

        <activity android:name=".CreateScreen"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".inventory.RewardsScreen"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".LoadScreen"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".inventory.RangedScreen"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".inventory.MeleeScreen"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".inventory.AccScreen"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".inventory.ArmorScreen"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".CharacterScreen"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".Characters_list"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>